{
  "name": "fonefo-kids-backend",
  "version": "1.0.0",
  "description": "API Rest para Fonefo Kids",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "dev": "node --env-file .env --watch ./src/index.mjs",
    "test:unix": "NODE_OPTIONS=--experimental-vm-modules node --env-file .env.test node_modules/jest/bin/jest.js --forceExit --detectOpenHandles",
    "test:unix:watch": "NODE_OPTIONS=--experimental-vm-modules node --env-file .env.test node_modules/jest/bin/jest.js --watchAll --forceExit --detectOpenHandles",
    "test:windows": "set NODE_OPTIONS=--experimental-vm-modules && node --env-file .env.test node_modules/jest/bin/jest.js --forceExit --detectOpenHandles",
    "test:windows:watch": "set NODE_OPTIONS=--experimental-vm-modules && node --env-file .env.test node_modules/jest/bin/jest.js --watchAll --forceExit --detectOpenHandles"
  },
  "author": "Juan Carlos Jiménez Gutiérrez <jcarlosj.dev@gmail.com>",
